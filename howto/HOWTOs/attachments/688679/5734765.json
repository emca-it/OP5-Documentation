{
    "changes": [
        {
            "description": "This is the first version of the Standalone VMware ESXi virtualization host management pack",
            "version": 1,
            "description": "This update is part of a change of all vmware check commands shipped with op5 Monitor. It should not affect on the check commands used by this management pack",
            "version": 2
        }
    ],
    "management_pack": {
        "commands": [
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l cpu -s usage -w $ARG3$ -c $ARG4$",
                "command_name": "check_vmware_api_host_cpu_usage"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l mem -s usage -w $ARG3$ -c $ARG4$",
                "command_name": "check_vmware_api_host_mem_usage"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l io -s read -w $ARG3$ -c $ARG4$",
                "command_name": "check_vmware_api_host_io_read"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l io -s write -w $ARG3$ -c $ARG4$",
                "command_name": "check_vmware_api_host_io_write"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l runtime -s health",
                "command_name": "check_vmware_api_host_runtime_health"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l runtime -s issues",
                "command_name": "check_vmware_api_host_runtime_issues"
            },
            {
                "command_line": "$USER1$/check_vmware_api -u $ARG1$ -p $ARG2$ -H $HOSTADDRESS$ -l runtime -s status",
                "command_name": "check_vmware_api_host_runtime_status"
            }
        ],
        "hostgroup": {
            "hostgroup_name": "VMware hosts",
            "notes": "Used by the \"VMware virtualization host\" management pack.",
            "notes_url": "/dokuwiki/doku.php/hostgroups/$HOSTGROUPNAME$"
        },
        "management_pack": {
            "_OP5SECRET__VMWARE_PASSWORD": "Password used when connecting to the VMware host",
            "_OP5SECRET__VMWARE_USERNAME": "Username used when connecting to the VMware host",
            "description": "Monitors runtime status, runtime health, runtime issues, CPU usage, memory usage, I/O read latency and I/O write latency on a standalone VMware ESXi virtualization host.",
            "hostgroup": "VMware hosts",
            "icon": "host_esx.png",
            "management_pack_name": "Standalone VMware ESXi virtualization host",
            "version": 0
        },
        "services": [
            {
                "check_command": "check_vmware_api_host_cpu_usage",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!75!90",
                "hostgroup_name": "VMware hosts",
                "service_description": "Host CPU usage"
            },
            {
                "check_command": "check_vmware_api_host_mem_usage",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!75!90",
                "hostgroup_name": "VMware hosts",
                "service_description": "Host memory usage"
            },
            {
                "check_command": "check_vmware_api_host_io_read",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!40!60",
                "hostgroup_name": "VMware hosts",
                "service_description": "I/O read latency"
            },
            {
                "check_command": "check_vmware_api_host_io_write",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!40!60",
                "hostgroup_name": "VMware hosts",
                "service_description": "I/O write latency"
            },
            {
                "check_command": "check_vmware_api_host_runtime_health",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!",
                "hostgroup_name": "VMware hosts",
                "service_description": "Runtime health"
            },
            {
                "check_command": "check_vmware_api_host_runtime_issues",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!",
                "hostgroup_name": "VMware hosts",
                "service_description": "Runtime issues"
            },
            {
                "check_command": "check_vmware_api_host_runtime_status",
                "check_command_args": "$_HOSTOP5SECRET__VMWARE_USERNAME$!$_HOSTOP5SECRET__VMWARE_PASSWORD$!",
                "hostgroup_name": "VMware hosts",
                "service_description": "Runtime status"
            }
        ]
    },
    "vendor": "op5"
}
